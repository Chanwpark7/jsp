    <servlet-class>myweb.mvc2board.controller.WriteProcController</servlet-class>
    <multipart-config>
      <max-file-size>10485760</max-file-size>
      <max-request-size>104857600</max-request-size>
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>WriteProcController</servlet-name>
    <url-pattern>/mvc2board/writeProc.do</url-pattern>
  </servlet-mapping>
  <servlet>
