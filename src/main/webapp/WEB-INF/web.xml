    <servlet-name>MemberController</servlet-name>
    <servlet-class>myweb.controllers.MemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberController</servlet-name>
    <url-pattern>/mvcEx1/signUp.do</url-pattern>
    <url-pattern>/mvcEx1/login.do</url-pattern>
    <url-pattern>/mvcEx1/signForm.do</url-pattern>
    <url-pattern>/mvcEx1/loginFail.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>파일 업로드 컨트롤러</description>
    <display-name>UploadeController</display-name>
    <servlet-name>UploadeController</servlet-name>
    <servlet-class>myweb.controllers.file.UploadeController</servlet-class>
  </servlet>
  <servlet-mapping>
